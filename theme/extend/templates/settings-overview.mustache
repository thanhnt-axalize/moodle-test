<div class="container-fluid">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 ros-cols-xl-4">
        {{#card}}
            <div class="col my-3">
                <div class="card bg-light h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{desc}}</p>
                    </div>
                    <div class="card-footer">
                        <a href="{{{url}}}" class="btn btn-primary btn-block">Go to {{title}}</a>
                    </div>
                </div>
            </div>
        {{/card}}
    </div>
</div>